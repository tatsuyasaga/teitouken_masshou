<div class="wrapper">
  <div class="head">
    <%= render "shared/header" %>
  </div>

  <h1>新規登録のために下記事項をご入力ください</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :nickname, "ニックネーム（掲示板で投稿する際に使用します）" %>
      <div class="input-form">
        <%= f.text_field :nickname, autofocus: true, placeholder: "例）たっちゃん" %>
      </div>
    </div>

    <div class="field">
      <%= f.label :name, "姓名" %>
      <div class="input-form">
        <%= f.text_field :name, autofocus: true, placeholder: "例）山田太郎" %>
      </div>
    </div>

    <div class="field">
      <%= f.label :postal_code, "郵便番号（ハイフンなしの半角数字7桁）" %>
      <div class="input-form">
        <%= f.text_field :postal_code, autofocus: true, placeholder: "例）0001111" %>
      </div>
    </div>

    <div class="field">
      <%= f.label :address, "住所（都道府県から）" %>
      <div class="input-form">
        <%= f.text_area :address, :size=> "45*20", autofocus: true, placeholder: "例）福岡県福岡市中央区天神一丁目１番１号" %>
      </div>
    </div>

    <div class="field">
      <%= f.label :phone_number, "電話番号" %>
      <div class="input-form">
        <%= f.text_field :phone_number, autofocus: true, placeholder: "例）09011110000" %>
      </div>
    </div>

    <div class="field">
      <%= f.label :email, "メールアドレス" %>
      <div class="input-form">
        <%= f.email_field :email, :size=> "25", autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="field">
      <%= f.label :password, "パスワード" %>
      <% if @minimum_password_length %>
      <em>（<%= @minimum_password_length %>文字以上の半角英数混合）</em>
      <% end %>
      <div class="input-form">
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "パスワード（確認用）" %>
      <div class="input-form">
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "新規登録" %>
    </div>
  <% end %>

  <div class="footer">
    <%= render "shared/footer" %>
  </div>
</div>